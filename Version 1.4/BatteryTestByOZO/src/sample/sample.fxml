            <Insets left="15.0" right="15.0" top="15.0" />
         </VBox.margin>
       </HBox>
       <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="600.0">
           <children>
               <Text text="%data" wrappingWidth="73.0" />
               <Button fx:id="selectFile" mnemonicParsing="false" onAction="#selectDataFile" text="%fileChoice" />
           </children>
           <VBox.margin>
               <Insets left="15.0" right="15.0" top="15.0" />
           </VBox.margin>
       </HBox>
